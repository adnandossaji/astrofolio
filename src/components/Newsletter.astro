---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
}

const { 
  title = "Subscribe to Our Newsletter", 
  description = "Get weekly recipe inspiration, cooking tips, and updates delivered to your inbox.",
  buttonText = "Subscribe"
} = Astro.props;
---

<section class="newsletter">
  <div class="container">
    <div class="newsletter-content">
      <h2>{title}</h2>
      <p>{description}</p>
      <form class="newsletter-form">
        <input type="email" placeholder="Your email address" required>
        <button type="submit">{buttonText}</button>
      </form>
    </div>
  </div>
</section>

<style>
  .newsletter {
    background-color: var(--color-primary);
    color: white;
    padding: 4rem 0;
    margin-top: 4rem;
  }

  .newsletter-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .newsletter h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: white;
  }

  .newsletter p {
    margin-bottom: 2rem;
    opacity: 0.9;
    color: white;
  }

  .newsletter-form {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.8rem 1rem;
    border: none;
    border-radius: 50px 0 0 50px;
    outline: none;
    font-family: var(--font-body);
  }

  .newsletter-form button {
    background-color: var(--color-accent);
    color: #333;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 0 50px 50px 0;
    font-weight: 500;
    cursor: pointer;
    font-family: var(--font-body);
    transition: background-color 0.3s;
  }

  .newsletter-form button:hover {
    background-color: #f8da3d;
  }

  @media (max-width: 768px) {
    .newsletter-form {
      flex-direction: column;
      gap: 1rem;
    }

    .newsletter-form input,
    .newsletter-form button {
      border-radius: 50px;
      width: 100%;
    }
  }
</style> 